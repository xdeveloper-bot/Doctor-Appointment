<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dlst_LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="8dp"
    android:orientation="vertical"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/tmp_CardView"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:padding="5dp">

        <ImageView
            android:id="@+id/tmp_profileimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/doctor" />

        <TextView
            android:id="@+id/tmp_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="15dp"
            android:text="Naame"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tmp_specialty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="55dp"
            android:text="Speciality"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tmp_hospital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="90dp"
            android:text="Hospital"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/tmp_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="300dp"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/ic_chevron" />

        <Button
            android:id="@+id/tmp_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="180dp"
            android:layout_marginTop="145dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="#979EA3"
            android:text="Book Appointment"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

    </androidx.cardview.widget.CardView>

</LinearLayout>