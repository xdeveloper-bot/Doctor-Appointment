<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/user_login_username"
        android:layout_width="349dp"
        android:layout_height="64dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:singleLine="true"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:layout_editor_absoluteX="31dp" />

    <EditText
        android:id="@+id/user_login_password"
        android:layout_width="349dp"
        android:layout_height="64dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/user_login_username"
        tools:layout_editor_absoluteX="31dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="169dp"
        android:layout_height="204dp"
        android:layout_marginTop="59dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/man"
        tools:layout_editor_absoluteX="121dp" />

    <Button
        android:id="@+id/user_login_btn1"
        android:layout_width="126dp"
        android:layout_height="51dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="55dp"
        android:background="#979EA3"
        android:text="LOG IN"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_login_password" />

    <Button
        android:id="@+id/user_login_btn2"
        android:layout_width="126dp"
        android:layout_height="51dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="55dp"
        android:background="#979EA3"
        android:text="SIGN UP"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/user_login_btn1"
        app:layout_constraintTop_toBottomOf="@+id/user_login_password" />

</androidx.constraintlayout.widget.ConstraintLayout>