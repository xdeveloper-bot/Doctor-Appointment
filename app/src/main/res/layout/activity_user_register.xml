<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/user_reg_fname"
        android:layout_width="349dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="First Name"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        tools:layout_editor_absoluteX="31dp" />

    <EditText
        android:id="@+id/user_reg_lname"
        android:layout_width="349dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Last Name"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/user_reg_fname"
        tools:layout_editor_absoluteX="31dp" />

    <EditText
        android:id="@+id/user_reg_dob"
        android:layout_width="349dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="DOB"
        android:inputType="date"
        app:layout_constraintTop_toBottomOf="@+id/user_reg_rbtn1"
        tools:layout_editor_absoluteX="31dp" />

    <EditText
        android:id="@+id/user_reg_num"
        android:layout_width="349dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Mobile Number"
        android:inputType="phone"
        app:layout_constraintTop_toBottomOf="@+id/user_reg_lname"
        tools:layout_editor_absoluteX="31dp" />

    <EditText
        android:id="@+id/user_reg_email"
        android:layout_width="349dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@+id/user_reg_num"
        tools:layout_editor_absoluteX="31dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/man"
        tools:layout_editor_absoluteX="141dp" />

    <RadioButton
        android:id="@+id/user_reg_rbtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:text="Male"
        app:layout_constraintEnd_toStartOf="@+id/user_reg_rbtn2"
        app:layout_constraintTop_toBottomOf="@+id/user_reg_email" />

    <RadioButton
        android:id="@+id/user_reg_rbtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Female"
        app:layout_constraintTop_toBottomOf="@+id/user_reg_email"
        tools:layout_editor_absoluteX="166dp" />

    <RadioButton
        android:id="@+id/user_reg_rbtn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="Other"
        app:layout_constraintStart_toEndOf="@+id/user_reg_rbtn2"
        app:layout_constraintTop_toBottomOf="@+id/user_reg_email" />

    <Button
        android:id="@+id/user_reg_submit_btn"
        android:layout_width="126dp"
        android:layout_height="51dp"
        android:layout_marginTop="30dp"
        android:background="#979EA3"
        android:text="REGISTER"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_reg_dob" />

</androidx.constraintlayout.widget.ConstraintLayout>