<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/atmp_ConstrainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/atmp_cardView"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/atmp_deleteImg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end|center_horizontal"
            android:layout_margin="8dp"
            app:srcCompat="@drawable/ic_delete" />

        <TextView
            android:id="@+id/atmp_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="120dp"
            android:layout_marginTop="8dp"
            android:text="Doctor Name"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/atmp_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="120dp"
            android:layout_marginTop="40dp"
            android:text="Appointment Time/Date"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/atmp_hospital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="75dp"
            android:text="Hospital Address"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/atmp_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="110dp"
            android:text="Contact No."
            android:textColor="#000000"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/atmp_profileImg"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/doctor" />

        <TextView
            android:id="@+id/atmp_touchTextView"
            android:layout_width="320dp"
            android:layout_height="match_parent" />

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>