<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/dlin_email"
        android:layout_width="349dp"
        android:layout_height="64dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:singleLine="true"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.451"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/dlin_pass"
        android:layout_width="349dp"
        android:layout_height="64dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dlin_email" />

    <ImageView
        android:id="@+id/dlin_img"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/doctor" />

    <Button
        android:id="@+id/dlin_loginBtn"
        android:layout_width="349dp"
        android:layout_height="46dp"
        android:layout_marginTop="20dp"
        android:background="#979EA3"
        android:text="LOG IN"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dlin_pass"
        app:layout_constraintVertical_bias="0.07999998" />

    <TextView
        android:id="@+id/dlin_txt1"
        android:layout_width="342dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:text="Doctor Login"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dlin_img" />

    <TextView
        android:id="@+id/dlin_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Login to Your Account"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dlin_txt1" />

    <TextView
        android:id="@+id/dlin_createaccount"
        android:layout_width="284dp"
        android:layout_height="23dp"
        android:layout_marginTop="5dp"
        android:text="Create Account"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dlin_loginBtn" />

    <ProgressBar
        android:id="@+id/dlin_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dlin_createaccount" />

    <TextView
        android:id="@+id/dlin_forget"
        android:layout_width="284dp"
        android:layout_height="23dp"
        android:layout_marginTop="5dp"
        android:text="Forget Password?"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/dlin_createaccount"
        app:layout_constraintStart_toStartOf="@+id/dlin_createaccount"
        app:layout_constraintTop_toBottomOf="@+id/dlin_createaccount" />

</androidx.constraintlayout.widget.ConstraintLayout>
